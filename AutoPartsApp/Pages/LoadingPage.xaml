<Page x:Class="AutoPartsApp.Pages.LoadingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoPartsApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoadingPage">

    <Grid>
        <TextBlock Text="Загрузка..." FontFamily="Copperplate Gothic Bold" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,80,0,0" Foreground="#FF7BB832"/>
        <Image Source="/Pages/iconApp.png" Grid.Row="1"  Stretch="None" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <ProgressBar Name="loadingPB" Background="#FF7BB832" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="400" Height="35" Minimum="0" Maximum="100" Margin="0,0,0,50" FlowDirection="LeftToRight" Foreground="#FF7BB832" BorderBrush="#FF7BB832"/>
        <TextBlock Text="{Binding ElementName=loadingPB, Path=Value, StringFormat={}{0:0}%}" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,60" FontFamily="Copperplate Gothic Bold" FontSize="16"/>
    </Grid>
</Page>
